generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  HOST
  GUEST
}

model User {
  id             String     @id @default(cuid())
  name           String
  email          String     @unique
  hashedPassword String
  userType       UserType   @default(GUEST)
  phone          String?
  address        String?
  city           String?
  country        String?
  bio            String?
  interests      Interest[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model Interest {
  id          String   @id @default(cuid())
  name        String   @unique
  users       User[]
} 